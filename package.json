{
  "name": "do-your-best",
  "version": "1.0.0",
  "description": "Task management application",
  "type": "module",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "test": "jest",
    "lint": "eslint src/js/*.js && stylelint assets/styles/*.css",
    "build": "rm -rf dist && mkdir dist && cp -r assets dist/ && cp -r src dist/ && cp index.html dist/",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.0.0",
    "live-server": "^1.2.0",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^28.0.0"
  }
}
